{
  "manifest_version": 3,
  "name": "Clash 云订阅管理插件",
  "version": "1.0.0",
  "description": "基于 WebDAV 的 Clash 订阅管理插件，支持坚果云等，支持复制、检测、Clash 导入。",
  "permissions": [
    "storage",
    "clipboardWrite",
    "proxy",
    "activeTab"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "background": {
    "service_worker": "background/background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["popup/popup.html"],
      "matches": ["<all_urls>"]
    }
  ]
}